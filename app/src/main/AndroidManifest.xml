<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thenewdomain.hangman">

    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SignInRegister"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RegisterPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CharacterList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OnePhoneGameAttack"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OnePhoneGameDefense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreateUserName"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RoomingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TwoPhoneGameAttack"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TwoPhoneGameDefense"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BattleResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WaitingRoom"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DecideSecretWord"
            android:screenOrientation="portrait" />
        <activity
            android:name=".IntermediateActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".CharacterAbility"></activity>
    </application>

</manifest>